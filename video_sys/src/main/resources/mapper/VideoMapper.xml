<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.video_sys.dao.VideoMapper">

    <!-- 结果映射 -->
    <resultMap id="BaseResultMap" type="com.video_sys.entity.Video">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="video_type" property="videoType" jdbcType="VARCHAR"/>
        <result column="video_name" property="videoName" jdbcType="VARCHAR"/>
        <result column="video_publisher" property="videoPublisher" jdbcType="VARCHAR"/>
        <result column="video_url" property="videoUrl" jdbcType="VARCHAR"/>
        <result column="duration" property="duration" jdbcType="VARCHAR"/>
        <result column="video_describe" property="videoDescribe" jdbcType="VARCHAR"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!-- 基础列 -->
    <sql id="Base_Column_List">
        id, video_type, video_name, video_publisher, video_url, duration, video_describe, create_time
    </sql>

    <!-- 查询条件 -->
    <sql id="Query_Where">
        <where>
            <if test="videoType != null and videoType != ''">
                AND video_type = #{videoType}
            </if>
            <if test="videoName != null and videoName != ''">
                AND video_name LIKE CONCAT('%', #{videoName}, '%')
            </if>
            <if test="videoPublisher != null and videoPublisher != ''">
                AND video_publisher LIKE CONCAT('%', #{videoPublisher}, '%')
            </if>
        </where>
    </sql>

    <!-- 根据ID查询 -->
    <select id="selectById" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM video
        WHERE id = #{id}
    </select>

    <!-- 分页查询列表 -->
    <select id="selectPageList" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM video
        <include refid="Query_Where"/>
        ORDER BY create_time DESC
        LIMIT #{offset}, #{pageSize}
    </select>

    <!-- 查询总数 -->
    <select id="selectCount" resultType="java.lang.Long">
        SELECT COUNT(1)
        FROM video
        <include refid="Query_Where"/>
    </select>

    <!-- 插入 -->
    <insert id="insert" parameterType="com.video_sys.entity.Video" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO video (
            video_type,
            video_name,
            video_publisher,
            video_url,
            duration,
            video_describe,
            create_time
        ) VALUES (
            #{videoType},
            #{videoName},
            #{videoPublisher},
            #{videoUrl},
            #{duration},
            #{videoDescribe},
            #{createTime}
        )
    </insert>

    <!-- 更新 -->
    <update id="update" parameterType="com.video_sys.entity.Video">
        UPDATE video
        <set>
            <if test="videoType != null and videoType != ''">
                video_type = #{videoType},
            </if>
            <if test="videoName != null and videoName != ''">
                video_name = #{videoName},
            </if>
            <if test="videoPublisher != null and videoPublisher != ''">
                video_publisher = #{videoPublisher},
            </if>
            <if test="videoUrl != null and videoUrl != ''">
                video_url = #{videoUrl},
            </if>
            <if test="duration != null and duration != ''">
                duration = #{duration},
            </if>
            <if test="videoDescribe != null and videoDescribe != ''">
                video_describe = #{videoDescribe},
            </if>
        </set>
        WHERE id = #{id}
    </update>

    <!-- 删除 -->
    <delete id="deleteById">
        DELETE FROM video
        WHERE id = #{id}
    </delete>

</mapper>

